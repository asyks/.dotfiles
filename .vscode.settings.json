{
  "editor.minimap.enabled": false,
  "files.exclude": {
    ".vscode/": true,
    ".mypy_cache/": true
  },
  "files.insertFinalNewline": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "json.format.enable": true,
  "[json]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {"language": "typescript", "autoFix": true},
    {"language": "typescriptreact", "autoFix": true}
  ],
  "python.linting.enabled": true,
  "python.pythonPath": "${env:HOME}/.pyenv/shims/python",
  "python.linting.pylintPath": "${env:HOME}/.pyenv/shims/pylint",
  "python.linting.flake8Enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pydocstyleEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${env:HOME}/.pyenv/shims/mypy",
  "python.linting.mypyArgs": [
    "--show-error-codes"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${env:HOME}/.pyenv/shims/black",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.rulers": [
      88
    ],
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Created By Me",
      "query": "is:open author:${user}"
    },
    {
      "label": "web-py",
      "query": "is:open label:web-py review:required -reviewed-by:${user}"
    },
    {
      "label": "web-js",
      "query": "is:open label:web-js review:required -reviewed-by:${user}"
    },
    {
      "label": "Already reviewed",
      "query": "is:open reviewed-by:${user}"
    }
  ],
  "scm.diffDecorations": "none",
  "vim.hlsearch": true,
  "vim.autoindent": false,
  "window.zoomLevel": 0,
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "keyboard.touchbar.enabled": false
}
